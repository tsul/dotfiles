#!/bin/sh

rm -rf ~/.vim \
       ~/.vimrc \
       ~/.zshrc \
       ~/.zprofile \
       ~/.zpreztorc \
       ~/.zprezto/modules/prompt/functions/prompt_water_setup \
       ~/.gitconfig \
       ~/.gitignore \
       ~/.config/mpv/mpv.conf

# zsh

ln -s ~/dotfiles/zshrc ~/.zshrc
ln -s ~/dotfiles/zprofile ~/.zprofile

# vim

ln -s ~/dotfiles/vim ~/.vim
ln -s ~/dotfiles/vim/vimrc ~/.vimrc

# git

ln -s ~/dotfiles/git/gitconfig ~/.gitconfig
ln -s ~/dotfiles/git/gitignore ~/.gitignore

# prezto

ln -s ~/dotfiles/prezto/zpreztorc ~/.zpreztorc
ln -s ~/dotfiles/prezto/prompt_water_setup ~/.zprezto/modules/prompt/functions/prompt_water_setup

# mpv

ln -s ~/dotfiles/mpv.conf ~/.config/mpv/mpv.conf
